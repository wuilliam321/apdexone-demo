{
  "extends": "tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "isolatedModules": false,
    "types": [
      "cypress",
      "@testing-library/cypress"
    ]
  },
  "include": [
    "tests/e2e/**/*.ts"
  ],
  "exclude": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/unit/*.ts",
    "tests/unit/*.tsx"
  ]
}
